<!DOCTYPE html>
<html>
  <head>
    <title>GdStatus</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag "//www.google.com/jsapi" %>
  </head>

  <body>
    <nav>
      <% if current_user %>
        <h3><%= Date.today.strftime("%A - %B %d, %Y") %></h3>
      <% else %>
        <p></p>
      <% end %>
      <img src="https://greatdivide.com/wp-content/uploads/2015/09/Great-Divide-Logo-Main-Rectangle-Two-Color-150px.png" alt="great divide logo" class="gd-logo">
      <% if current_user %>
        <button type="button" name="button" class="nav-btn">Log Out</button>
      <% else %>
        <p></p>
      <% end %>
    </nav>
    <%= yield %>
  </body>
</html>
